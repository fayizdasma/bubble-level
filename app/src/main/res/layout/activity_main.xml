<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".view.MainActivity">

    <TextView
        android:id="@+id/rotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:textSize="18sp"
        tools:text="x:0\ny:0" />

    <com.fm.bubblelevel.view.custom.BubbleLevel
        android:id="@+id/custom_view_bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <com.fm.bubblelevel.view.custom.LevelGraph
        android:id="@+id/custom_view_graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_view_bubble"
        android:background="@color/colorLightBG" />

</RelativeLayout>